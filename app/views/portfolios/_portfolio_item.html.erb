<div class="col-md-4">
 	<div class="card" data-id="<%= portfolio_item.id %>">
   		<%= image_tag portfolio_img(portfolio_item, 'thumb'), width: '100%' %>
   		<p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
   		</p>
   		<% if current_user.roles.include?(:site_admin) %>
   		<%= link_to 'Delete', portfolio_item, method: :delete %>
   		<% end %>
 	</div>
 </div>
